<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd"> 
<!--initially hover on https tag and click on force download to remove errors in the file -->
<suite name="CrossBrowserTesting">  
  <test thread-count="5" name="ChromeTest">
   <parameter name="browsers" value="Chrome"></parameter>
    <classes> <!-- mention the name of the testcases to be executed => packagename.testclassname -->
      <class name="testscripts.LoginTest">
        <methods>
          <include name="verifyUserLoginWithValidUsernameAndInvalidPassword"></include>
        </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test thread-count="5" name="EdgeTest">
  <parameter name="browsers" value="Edge"></parameter>
    <classes> <!-- mention the name of the testcases to be executed => packagename.testclassname -->
      <class name="testscripts.LoginTest">
        <methods>
          <include name="verifyUserLoginWithValidUsernameAndInvalidPassword"></include>
        </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test thread-count="5" name="FirefoxTest">
  <parameter name="browsers" value="Firefox"></parameter>
    <classes> <!-- mention the name of the testcases to be executed => packagename.testclassname -->
      <class name="testscripts.LoginTest">
        <methods>
          <include name="verifyUserLoginWithValidUsernameAndInvalidPassword"></include>
        </methods>
      </class>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
 